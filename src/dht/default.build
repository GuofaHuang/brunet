<?xml version="1.0"?>

<project name="Brunet" default="build">
  <description> Builds Brunet.Dht.dll </description>
  <property name="build.dir" value="build"/>
  <property name="lib.dir" value="../../lib"/>

  <target name="debug" description="Configures a debug build">
    <copy todir="${build.dir}">
       <fileset basedir="${lib.dir}">
          <include name="Brunet.dll" />
       </fileset>
    </copy>
    <csc target="library" define="DHT_DEBUG" output="${build.dir}/Brunet.Dht.dll">
      <sources failonempty="true">
        <include name="*.cs"/>
      </sources>
      <references>
        <include name="${build.dir}/Brunet.dll" />
      </references>
    </csc>
    <copy todir="${lib.dir}">
      <fileset basedir="${build.dir}">
           <include name="Brunet.Dht.dll" />
      </fileset>
    </copy>
  </target>

  <target name="build" description="Builds Brunet.Dht.dll for release">
    <copy todir="${build.dir}">
       <fileset basedir="${lib.dir}">
          <include name="Brunet.dll" />
       </fileset>
    </copy>
    <csc target="library" define="" output="${build.dir}/Brunet.Dht.dll">
      <sources failonempty="true">
        <include name="*.cs"/>
      </sources>
      <references>
        <include name="${build.dir}/Brunet.dll" />
      </references>
    </csc>
    <copy todir="${lib.dir}">
      <fileset basedir="${build.dir}">
           <include name="Brunet.Dht.dll" />
      </fileset>
    </copy>
  </target>
</project>
